{
  "extends": ["stylelint-config-standard-scss"],
  "rules": {
    "selector-class-pattern": [
      "^[a-z0-9]+([a-z0-9_-]*[a-z0-9]+)?$",
      {
        "message": "Classnames must be in kebab-case or BEM notation."
      }
    ],
    "media-feature-range-notation": [
      "prefix",
      {
        "disableFix": true
      }
    ]
  }
}
